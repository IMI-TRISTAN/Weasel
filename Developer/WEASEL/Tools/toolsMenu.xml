<tools>
  <tool>
    <action>Invert</action>
    <shortcut>Ctrl+I</shortcut>
    <tooltip>Invert a DICOM Image or series</tooltip>
    <applies_both_images_series>True</applies_both_images_series>
    <module>invertDICOM_Image</module>
    <function>saveImage</function>
  </tool>
  <tool>
    <action>Square</action>
    <shortcut>Ctrl+S</shortcut>
    <tooltip>Square a DICOM Image or series</tooltip>
    <applies_both_images_series>True</applies_both_images_series>
    <module>squareDICOM_Image</module>
    <function>saveImage</function>
  </tool>
  <tool>
    <action>Square Developer (Pipeline2D)</action>
    <shortcut>Ctrl+S+1</shortcut>
    <tooltip>Square a DICOM Image or series</tooltip>
    <applies_both_images_series>True</applies_both_images_series>
    <module>squareDICOM_Image_Developer</module>
    <function>processPipeline2D</function>
  </tool>
  <tool>
    <action>Square Developer (Pipeline3D/GroupWise)</action>
    <shortcut>Ctrl+S+3</shortcut>
    <tooltip>Square a DICOM Image or series</tooltip>
    <applies_both_images_series>False</applies_both_images_series>
    <module>squareDICOM_Image_Developer</module>
    <function>processPipeline3D</function>
  </tool>
  <tool>
    <action>Gaussian Filter Developer (GroupWise)</action>
    <shortcut>Ctrl+F+3</shortcut>
    <tooltip>gaussian</tooltip>
    <applies_both_images_series>False</applies_both_images_series>
    <module>gaussianFilterDICOM_Image_Developer</module>
    <function>GroupWise</function>
  </tool>
  <tool>
    <action>Edit DICOM Tag Developer</action>
    <shortcut>Ctrl+D</shortcut>
    <tooltip>Choose DICOM header and change the selected files</tooltip>
    <applies_both_images_series>True</applies_both_images_series>
    <module>editDICOM_Image_Developer</module>
    <function>editDICOM</function>
  </tool>
  <tool>
    <action>Threshold</action>
    <shortcut>Ctrl+T</shortcut>
    <tooltip>Threshold a DICOM Image or series</tooltip>
    <applies_both_images_series>True</applies_both_images_series>
    <module>thresholdDICOM_Image</module>
    <function>saveImage</function>
  </tool>
  <tool>
    <action>Threshold Developer (SlicebySlice)</action>
    <shortcut>Ctrl+L</shortcut>
    <tooltip>Threshold a DICOM Image or series</tooltip>
    <applies_both_images_series>True</applies_both_images_series>
    <module>thresholdDICOM_Image_Developer</module>
    <function>SliceBySlice</function>
  </tool>
  <tool>
    <action>Merge Series (Developer)</action>
    <shortcut>Ctrl+M+E</shortcut>
    <tooltip>Merge selected images or series into 1 series</tooltip>
    <applies_both_images_series>True</applies_both_images_series>
    <module>mergeDICOM_Developer</module>
    <function>MergeSeries</function>
  </tool>
  <tool>
    <action>MIP (Developer)</action>
    <shortcut>Ctrl+M+I</shortcut>
    <tooltip>Calculate Maximum Intensity Projection of a series</tooltip>
    <applies_both_images_series>False</applies_both_images_series>
    <module>calculateMIP_Developer</module>
    <function>TimeMIP</function>
  </tool>
  <tool>
    <action>B0 Map Calculation</action>
    <shortcut>Ctrl+0</shortcut>
    <tooltip>Extracts the B0 Map from the series if applicable</tooltip>
    <applies_both_images_series>False</applies_both_images_series>
    <module>B0MapDICOM_Image</module>
    <function>saveB0MapSeries</function>
  </tool>
  <tool>
    <action>T2* Map Calculation</action>
    <shortcut>Ctrl+2</shortcut>
    <tooltip>Applies a T2* fitting to the series if applicable</tooltip>
    <applies_both_images_series>False</applies_both_images_series>
    <module>T2StarMapDICOM_Image</module>
    <function>saveT2StarMapSeries</function>
  </tool>
  <tool>
    <action>T1 Map Molli Calculation</action>
    <shortcut>Ctrl+1</shortcut>
    <tooltip>Applies a T1 Molli fitting to the series if applicable</tooltip>
    <applies_both_images_series>False</applies_both_images_series>
    <module>T1MapMolliDICOM_Image</module>
    <function>saveT1MapSeries</function>
  </tool>
</tools>